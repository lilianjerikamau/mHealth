<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#B6D1D9"
    >

    <!-- Toolbar area -->
<com.google.android.material.appbar.MaterialToolbar
android:id="@+id/toolbar"
android:layout_width="match_parent"
android:layout_height="56dp"
    android:textAlignment="center"
    android:layout_gravity="center"
    android:gravity="center"
android:background="#B6D1D9"
app:navigationIcon="@drawable/icon_back_btn"
app:title="User Details"
app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
app:titleTextColor="#4D4D59" />

    <!-- User info container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginTop="24dp"
android:gravity="center_vertical">

<!-- Circle avatar -->
<View
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:background="@drawable/ic_user" />

<!-- User info texts -->
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginStart="16dp">

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suzzane Gideon"
        android:textColor="#4D4D59"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fe-male"
        android:textColor="#4D4D59"
        android:textSize="14sp"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SN: T728"
        android:textColor="#4D4D59"
        android:textSize="14sp"
        android:layout_marginTop="2dp" />
</LinearLayout>
</LinearLayout>

    <!-- Stats row -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginTop="24dp"
android:weightSum="3"
android:gravity="center">

<com.google.android.material.card.MaterialCardView
    android:layout_width="0dp"
    android:layout_height="80dp"
    android:layout_weight="1"
    android:layout_margin="4dp"
    android:strokeColor="#4D4D59"
    android:strokeWidth="@integer/material_motion_duration_long_1"
    android:backgroundTint="#B6D1D9"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star"
            android:tint="#4D4D59" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.8"
            android:textColor="#4D4D59"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

<com.google.android.material.card.MaterialCardView
    android:layout_width="0dp"
    android:layout_height="80dp"
    android:layout_weight="1"
    android:layout_margin="4dp"
    android:strokeColor="#4D4D59"
    android:strokeWidth="@integer/material_motion_duration_long_1"
    android:backgroundTint="#B6D1D9"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_heart"
            android:tint="#4D4D59" />

        <TextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="126"
            android:textColor="#4D4D59"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

<com.google.android.material.card.MaterialCardView
    android:layout_width="0dp"
    android:layout_height="80dp"
    android:layout_weight="1"
    android:layout_margin="4dp"
    android:strokeColor="#4D4D59"
    android:strokeWidth="@integer/material_motion_duration_long_1"
    android:backgroundTint="#B6D1D9"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_calendar"
            android:tint="#4D4D59" />

        <TextView
            android:id="@+id/membershipDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 years"
            android:textColor="#4D4D59"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

</LinearLayout>

    <!-- Details card -->
<com.google.android.material.card.MaterialCardView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="24dp"
app:cardCornerRadius="12dp"
app:cardElevation="0dp"
android:padding="16dp"
android:strokeColor="#4D4D59"
android:strokeWidth="@integer/material_motion_duration_long_1"
android:backgroundTint="#B6D1D9">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:padding="20dp"
    android:layout_marginBottom="100dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member since"
        android:textColor="#4D4D59"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/memberSince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16.06.2020"
        android:textColor="#4D4D59"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4D4D59" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle type"
        android:textColor="#4D4D59"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/vehicleType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUV, Ambulance"
        android:textColor="#4D4D59"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4D4D59" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plate number"
        android:textColor="#4D4D59"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/plateNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SSD 246CE"
        android:textColor="#4D4D59"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

</LinearLayout>
</com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    </LinearLayout>
