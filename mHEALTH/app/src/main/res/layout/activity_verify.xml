<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main2"
    tools:context="com.jollyride.mhealth.VerifyActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <!-- Left Image -->
                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon_back_btn"
                    android:adjustViewBounds="true"
                    android:maxHeight="70dp"
                    android:maxWidth="70dp"/>

                <!-- Center Text -->
                <TextView
                    android:id="@+id/centerText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_bold"
                    android:text="Verify code"
                    android:textAppearance="@style/set_your_lo"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:paddingLeft="0dp"
                    android:paddingRight="70dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:padding="20dp">
                <TextView
                    android:id="@+id/enable_loca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="34dp"
                    android:layout_marginRight="34dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center_horizontal|top"
                    android:lineSpacingExtra="2sp"
                    android:text="A code has been sent to +211 928 405 985 via SMS"
                    android:textAppearance="@style/intro_desc"
                    android:translationY="-1.12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:weightSum="4">

                <!-- Digit 1 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp">

                    <EditText
                        android:id="@+id/codeDigit1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:maxLength="1"
                        android:background="@null"
                        android:textColor="#3E4958"
                        android:layout_marginBottom="8dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/line_underline"/>
                </FrameLayout>

                <!-- Repeat for Digit 2 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp">

                    <EditText
                        android:id="@+id/codeDigit2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:maxLength="1"
                        android:background="@null"
                        android:textColor="#3E4958"
                        android:layout_marginBottom="8dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/line_underline"/>
                </FrameLayout>

                <!-- Digit 3 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp">

                    <EditText
                        android:id="@+id/codeDigit3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:maxLength="1"
                        android:background="@null"
                        android:textColor="#3E4958"
                        android:layout_marginBottom="8dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/line_underline"/>
                </FrameLayout>

                <!-- Digit 4 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp">

                    <EditText
                        android:id="@+id/codeDigit4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:maxLength="1"
                        android:background="@null"
                        android:textColor="#3E4958"
                        android:layout_marginBottom="8dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/line_underline"/>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/goToSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:paddingHorizontal="10dp"
                    android:text="@string/resend_code"
                    android:textColor="#3E4958"
                    android:textSize="15sp"
                    android:textStyle="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doneButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/main1"
                    android:padding="20dp"
                    android:text="Done"
                    android:textColor="@color/main2"
                    android:textSize="20sp"
                    app:cornerRadius="15dp"
                    android:onClick="onDoneClicked"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/callButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/main1"
                    android:padding="20dp"
                    android:text="Press here to get a call"
                    android:textColor="@color/main2"
                    android:textSize="20sp"
                    app:cornerRadius="0dp"
                    android:onClick="onDoneClicked"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
                <GridLayout
                    android:id="@+id/numberPad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="3"
                    android:rowCount="4"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:padding="8dp">

                    <!-- Digits 1 to 9 -->
                    <Button
                        android:id="@+id/btn1"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="1"
                        android:textSize="30sp"
                        android:textColor="#3E4958"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"/>


                    <Button
                        android:id="@+id/btn2"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="2"
                        android:textSize="30sp"
                        android:textColor="#3E4958"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"/>


                    <Button
                        android:id="@+id/btn3"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="3"
                        android:textSize="30sp"
                        android:textColor="#3E4958"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"/>


                    <Button
                        android:id="@+id/btn4"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="4"
                        android:textSize="30sp"
                        android:textColor="#3E4958"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"/>


                    <Button
                        android:id="@+id/btn5"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="5"
                        android:textSize="30sp"
                        android:textColor="#3E4958"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"/>


                    <Button
                        android:id="@+id/btn6"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="6"
                        android:textSize="30sp"
                        android:textColor="#3E4958"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"/>


                    <Button
                        android:id="@+id/btn7"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="7"
                        android:textSize="30sp"
                        android:textColor="#3E4958"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"/>


                    <Button
                        android:id="@+id/btn8"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="8"
                        android:textSize="30sp"
                        android:textColor="#3E4958"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"/>


                    <Button
                        android:id="@+id/btn9"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="9"
                        android:textSize="30sp"
                        android:textColor="#3E4958"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"/>


                    <!-- Empty space -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp" />

                    <!-- Button 0 -->
                    <Button
                        android:id="@+id/btn0"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="0"
                        android:textSize="30sp"
                        android:textColor="#3E4958"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"/>


                    <!-- Delete button -->
                    <ImageButton
                        android:id="@+id/btnDelete"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/icon_del"
                        android:contentDescription="Delete"
                        android:scaleType="centerInside" />

                </GridLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>