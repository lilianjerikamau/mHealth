<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AppBar with Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.Material3.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main2"
            app:navigationIcon="@drawable/icon_back_btn"
            app:title="Settings"
            app:titleCentered="true"
            app:titleTextColor="@android:color/black" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable main layout below toolbar -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp">

        <LinearLayout
            android:id="@+id/main_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Profile image with edit icon -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_user_driver"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

                <ImageView
                    android:id="@+id/edit_profile_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="-8dp"
                    android:contentDescription="Edit profile picture"
                    app:srcCompat="@drawable/ic_edit" />
            </FrameLayout>

            <!-- Name -->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suzanne Gideon"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#37474F"
                android:layout_marginTop="16dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="suzanne@nileboda.com"
                android:textSize="14sp"
                android:textColor="#9E9E9E"
                android:layout_marginTop="4dp" />

            <!-- Grid of 4 options -->
            <GridLayout
                android:id="@+id/grid_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:rowCount="2"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true">

                <!-- Ride history -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_ride_history"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp"
                    app:strokeWidth="0.5dp"
                    android:clickable="true"
                    android:focusable="true"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/main2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_ride_history"
                            app:tint="#37474F" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ride history"
                            android:textColor="#37474F"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Terms -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_terms"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp"
                    app:strokeWidth="0.5dp"
                    android:clickable="true"
                    android:focusable="true"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/main2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_terms"
                            app:tint="#37474F" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terms"
                            android:textColor="#37474F"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Promocode -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_promocode"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp"
                    app:strokeWidth="0.5dp"
                    android:clickable="true"
                    android:focusable="true"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/main2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_promocode"
                            app:tint="#37474F" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Promocode"
                            android:textColor="#37474F"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Support -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_support"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp"
                    app:strokeWidth="0.5dp"
                    android:clickable="true"
                    android:focusable="true"
                  >

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/main2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_support"
                            app:tint="#37474F" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Support"
                            android:textColor="#37474F"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Floating close button at bottom -->
    <ImageButton
        android:id="@+id/fab_close"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@android:color/transparent"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:contentDescription="Close"
        app:srcCompat="@drawable/ic_close_btn" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
