<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main2"
    tools:context=".AddressSearchActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <!-- Left Image -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/icon_back_btn"
                android:adjustViewBounds="true"
                android:maxHeight="70dp"
                android:maxWidth="70dp"/>

            <!-- Center Text -->
            <TextView
                android:id="@+id/centerText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_bold"
                android:text="Drop-off"
                android:textAppearance="@style/set_your_lo"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"/>

            <!-- Right Image -->
            <ImageView
                android:id="@+id/rightImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_menu"
                android:adjustViewBounds="true"
                android:maxHeight="70dp"
                android:maxWidth="70dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/block">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/destination_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconTintMode="src_in"
                app:startIconDrawable="@drawable/ic_search"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp">

                <AutoCompleteTextView
                    android:id="@+id/destination_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"
                    android:imeOptions="actionSearch"
                    android:dropDownVerticalOffset="-300dp"
                    android:dropDownAnchor="@id/destination_input_layout"
                    android:dropDownWidth="match_parent"
                    android:dropDownHeight="300dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:tabIndicatorColor="@color/main1"
                app:tabIndicatorHeight="3dp"
                app:tabSelectedTextColor="@color/main1"
                app:tabTextColor="@color/gray"
                app:tabMode="fixed"
                app:tabGravity="fill"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>


    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>