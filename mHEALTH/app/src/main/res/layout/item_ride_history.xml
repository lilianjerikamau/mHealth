<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    android:background="#C3D7DF"
    app:cardElevation="8dp"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Date, time, and status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/dateTimeText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="8 APRIL 2022, 18:39"
                android:textStyle="bold"
                android:textColor="#384654"
                android:textSize="14sp"  android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:text="COMPLETED"
                android:textStyle="bold"
                android:textColor="#27AE60"
                android:textSize="14sp"  android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="#384654" />

        <!-- Ride Details -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- Start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/startTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:24"
                    android:textColor="#384654"
                    android:textSize="14sp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:background="#384654" />

                <TextView
                    android:id="@+id/startAddressText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="107 road, Munuki Block “c”, Juba, South Sudan"
                    android:textColor="#384654"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Destination -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/endTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:38"
                    android:textColor="#384654"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/arrowDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:text="▼"
                    android:textColor="#384654"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/endAddressText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Suk Jebel Shopping Centre, Juba, South Sudan"
                    android:textColor="#384654"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
